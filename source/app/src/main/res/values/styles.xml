<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ToolbarTitle">
        <item name="android:fontFamily">@font/roboto_slab</item>
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="TextAppearance.Title" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textSize">@dimen/large_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/roboto_slab</item>
    </style>

    <style name="TextAppearance.DefaultText" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/roboto_slab</item>
    </style>

    <style name="TextAppearance.SpecificBookText" parent="TextAppearance.DefaultText">
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginStart">@dimen/default_margin</item>
        <item name="android:layout_marginEnd">@dimen/default_margin</item>
    </style>

    <style name="DefaultCustomButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:fontFamily">@font/roboto_slab</item>
        <item name="android:textColor">#fff</item>
        <item name="android:background">@color/color_selector</item>
    </style>

</resources>
